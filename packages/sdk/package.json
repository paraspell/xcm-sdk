{
  "name": "@paraspell/sdk",
  "version": "7.2.10",
  "description": "SDK for ParaSpell XCM/XCMP tool for developers",
  "repository": "@paraspell/sdk",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "tsc --noEmit",
    "build": "rollup -c",
    "lint:check": "eslint src",
    "lint": "eslint --fix .",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "test:watch": "vitest",
    "runAll": "pnpm compile && pnpm format:write && pnpm lint && pnpm test",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts --sequence.concurrent"
  },
  "dependencies": {
    "@paraspell/sdk-core": "workspace:*",
    "ethers": "^6.13.4",
    "viem": "^2.21.58"
  },
  "peerDependencies": {
    "polkadot-api": ">= 1.8.1 < 2"
  },
  "devDependencies": {
    "@babel/plugin-syntax-import-attributes": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@codecov/rollup-plugin": "^1.4.0",
    "@noble/curves": "^1.7.0",
    "@noble/hashes": "^1.6.1",
    "@polkadot-labs/hdkd": "^0.0.10",
    "@polkadot-labs/hdkd-helpers": "^0.0.10",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-json": "^6.1.0",
    "@scure/bip32": "^1.6.0",
    "@scure/bip39": "^1.5.0",
    "@vitest/coverage-v8": "^2.1.8",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "prettier": "^3.4.2",
    "rollup": "^4.29.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "tslib": "^2.8.1"
  }
}
