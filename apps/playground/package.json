{
  "name": "@paraspell/playground",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint:check": "eslint .",
    "lint": "eslint --fix .",
    "format:check": "prettier --check src",
    "format:write": "prettier --write src",
    "test:e2e": "playwright test",
    "install-polkadot-ext": "cd e2e/extensions/polkadot-ext && yarn && yarn build:chrome",
    "init-polkadot-ext": "git clone https://github.com/polkadot-js/extension e2e/extensions/polkadot-ext && pnpm install-polkadot-ext",
    "init-metamask-ext": "mkdir -p e2e/extensions/metamask-ext/ && cd e2e/extensions/metamask-ext && curl -L -o metamask.zip https://github.com/MetaMask/metamask-extension/releases/download/v12.2.4/metamask-chrome-12.2.4.zip && unzip metamask.zip",
    "init-e2e": "pnpm init-polkadot-ext && pnpm init-metamask-ext"
  },
  "dependencies": {
    "@mantine/code-highlight": "^7.15.2",
    "@mantine/core": "^7.15.2",
    "@mantine/form": "^7.15.2",
    "@mantine/hooks": "^7.15.2",
    "@mantine/notifications": "^7.15.2",
    "@mantinex/dev-icons": "^1.1.0",
    "@paraspell/sdk": "workspace:*",
    "@paraspell/sdk-pjs": "workspace:*",
    "@paraspell/xcm-analyser": "workspace:*",
    "@paraspell/xcm-router": "workspace:*",
    "@polkadot/api": "^15.0.2",
    "@polkadot/apps-config": "^0.146.1",
    "@polkadot/extension-dapp": "^0.57.1",
    "@polkadot/extension-inject": "^0.57.1",
    "@polkadot/keyring": "^13.2.3",
    "@polkadot/util": "^13.2.3",
    "@polkadot/util-crypto": "^13.2.3",
    "@snowbridge/contract-types": "^0.1.25",
    "@tabler/icons-react": "^3.26.0",
    "axios": "^1.7.9",
    "clsx": "^2.1.1",
    "ethers": "^6.13.4",
    "polkadot-api": "^1.8.1",
    "react": "^19.0.0",
    "react-confetti": "^6.2.2",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "viem": "^2.21.58",
    "web3": "^4.16.0",
    "web3-validator": "^2.0.6"
  },
  "devDependencies": {
    "@metamask/providers": "^18.3.1",
    "@playwright/test": "^1.49.1",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.4",
    "path": "^0.12.7",
    "postcss": "^8.4.49",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "url": "^0.11.4",
    "vite": "^6.0.6",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-wasm": "^3.4.1"
  }
}
